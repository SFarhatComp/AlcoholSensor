<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/CancelIdNumber"
        android:layout_width="207dp"
        android:layout_height="50dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:hint="Contact ID to Delete"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DeleteSaveButton"
        android:layout_width="408dp"
        android:layout_height="43dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="2dp"
        android:text="Save"
        app:layout_constraintBottom_toTopOf="@+id/DeleteCancelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CancelIdNumber"
        app:layout_constraintVertical_bias="0.205" />

    <Button
        android:id="@+id/DeleteCancelButton"
        android:layout_width="408dp"
        android:layout_height="43dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="2dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CancelIdNumber"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>